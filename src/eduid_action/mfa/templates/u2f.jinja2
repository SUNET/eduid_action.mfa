{% extends "templates/base.jinja2" %}

{% block contents %}
<div class="row col-xs-12 center-block">
    <div class="page-header col-xs-8 col-xs-offset-2">
      <div class="u2f-title">
        <h2>{{ _("2-step authentication") }} </h2>
      </div>
      <div class="u2f-subtitle">
        <h3>{{ _("This second step verifies it's really you who is logging in") }}<h3>
      </div>
      <div>
        <p class="lead"><strong>{{ _("You must insert your security (U2F) key
          into an USB port in your computer, and, if it has a button, you have
          to tap it to log in") }}</strong></p>
      </div>
    </div>
   <form method="POST" action="#" id="form" class="form-inline">

       {%  if testing %}
       <div id="tou-form-buttons" class="form-group">
           <div class="input-group">
               <div class="col-xs-12 col-sm-6">
                   <input class="btn btn-success" type="submit" name="accept" id="accept"
                          value="{{ _('Fake authn while testing') }}">
               </div>
           </div>
       </div>
       {% endif %}

      <input type="hidden" name="tokenResponse" id="tokenResponse"/>
  </form>
</div>

<span class="dataholder" id="u2f-data" data-u2fdata='{{ u2fdata|safe }}'></span>
{% endblock %}

{% block extrajs %}
    {%  if not testing %}
      <script src="{{'eduid_actions:static/js/u2f-api.js'|static_url}}"></script>
      <script src="{{'eduid_actions:static/js/actions-u2f.js'|static_url}}"></script>
    {% endif %}
{% endblock %}
